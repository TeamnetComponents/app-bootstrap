<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="file_ext" value="_orcl" dbms="oracle" />
    <property name="file_ext" value="" dbms="!oracle" />

    <changeSet id="03022015" author="bootstrap">
        <createTable tableName="T_MENU">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="parent_id" type="bigint"/>
            <column name="name" type="varchar(100)"/>
            <column name="route" type="varchar(255)"/>
            <column name="css_class" type="varchar(100)"/>
            <column name="sort_no" type="bigint"/>
            <column name="active" type="bigint"/>
            <column name="module_name" type="varchar(100)"/>
        </createTable>
        <createTable tableName="T_MENU_AUTHORITY">
            <column name="menu_id" type="bigint" />
            <column name="authority" type="varchar(50)"/>
        </createTable>
        <addPrimaryKey columnNames="menu_id, authority" tableName="T_MENU_AUTHORITY"/>

        <addForeignKeyConstraint baseColumnNames="authority"
                                 baseTableName="T_MENU_AUTHORITY"
                                 constraintName="fk_authority_name"
                                 referencedColumnNames="code"
                                 referencedTableName="T_ROLE"/>

        <addForeignKeyConstraint baseColumnNames="menu_id"
                                 baseTableName="T_MENU_AUTHORITY"
                                 constraintName="fk_menu_id"
                                 referencedColumnNames="id"
                                 referencedTableName="T_MENU"/>

        <loadData encoding="UTF-8"
                  file="config/liquibase/menus${file_ext}.csv"
                  separator=";"
                  tableName="T_MENU">
            <column name="activated" type="boolean"/>
        </loadData>
        <loadData encoding="UTF-8"
                  file="config/liquibase/menus_authorities.csv"
                  separator=";"
                  tableName="T_MENU_AUTHORITY">
            <column name="activated" type="boolean"/>
        </loadData>
    </changeSet>

    <changeSet id="12022015#1" author="bootstrap" dbms="!oracle">
        <insert tableName="T_DICTIONARY">
            <column name="code" value="C_SYSTEM-D_FA"/>
            <column name="name" value="FontAwesome icon classes"/>
            <column name="description" value="FontAwesome available icon css classes"/>
            <column name="collection_id" valueComputed="(select id from T_DICTIONARY_COLLECTION where code ='C_SYSTEM')"/>
        </insert>

        <loadData encoding="UTF-8"
                  file="config/liquibase/dictionary_fa_icons${file_ext}.csv"
                  separator=";"
                  tableName="T_DICTIONARY_ELEMENT" />
    </changeSet>

    <changeSet id="12022015#1" author="bootstrap" dbms="oracle">
        <insert tableName="T_DICTIONARY">
            <column name="id" valueComputed="HIBERNATE_SEQUENCE.NEXTVAL" />
            <column name="code" value="C_SYSTEM-D_FA"/>
            <column name="name" value="FontAwesome icon classes"/>
            <column name="description" value="FontAwesome available icon css classes"/>
            <column name="collection_id" valueComputed="(select id from T_DICTIONARY_COLLECTION where code ='C_SYSTEM')"/>
        </insert>

        <loadData encoding="UTF-8"
                  file="config/liquibase/dictionary_fa_icons${file_ext}.csv"
                  separator=";"
                  tableName="T_DICTIONARY_ELEMENT">
            <column name="id" type="NUMERIC" />
        </loadData>
    </changeSet>

    <changeSet id="20150213" author="bootstrap">
        <update tableName="T_DICTIONARY_ELEMENT">
            <column name="dictionary_id" valueComputed="(select id from T_DICTIONARY where code ='C_SYSTEM-D_FA')"/>
            <where>code like 'C_SYSTEM-D_FA%'</where>
        </update>
    </changeSet>
</databaseChangeLog>
