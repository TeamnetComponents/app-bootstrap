<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <changeSet id="03022015" author="bootstrap">
        <createTable tableName="T_MENU">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="parent_id" type="bigint"/>
            <column name="name" type="varchar(100)"/>
            <column name="route" type="varchar(255)"/>
            <column name="css_class" type="varchar(100)"/>
        </createTable>
        <createTable tableName="T_MENU_AUTHORITY">
            <column name="menu_id" type="bigint" />
            <column name="authority" type="varchar(50)"/>
        </createTable>

        <loadData encoding="UTF-8"
                  file="config/liquibase/menus.csv"
                  separator=";"
                  tableName="T_MENU">
            <column name="activated" type="boolean"/>
        </loadData>
        <loadData encoding="UTF-8"
                  file="config/liquibase/menus_authorities.csv"
                  separator=";"
                  tableName="T_MENU_AUTHORITY">
            <column name="activated" type="boolean"/>
        </loadData>
    </changeSet>
</databaseChangeLog>
