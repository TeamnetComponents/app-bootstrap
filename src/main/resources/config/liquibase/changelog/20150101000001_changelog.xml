    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql,mssql"/>
    <property name="now" value="sysdate" dbms="oracle"/>
    <property name="activated" value="true" dbms="postgresql"/>
    <property name="activated" value="1" dbms="oracle,mssql"/>

    <changeSet id="00000000000000" author="bootstrap" dbms="!mssql">
        <createSequence sequenceName="hibernate_sequence" startValue="1" incrementBy="1"/>
    </changeSet>

    <changeSet id="00000000000000#mssql" author="bootstrap" dbms="mssql">
