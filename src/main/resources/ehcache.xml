<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd"
         name="CM1"
         updateCheck="false"
         maxBytesLocalHeap="16M">

    <!--
      This is a default configuration, it is re-configured by the CacheConfiguration Spring Bean, using the
      properties from the resources/config/*.yml files.
    -->

    <diskStore path="java.io.tmpdir"/>

    <defaultCache
            eternal="false"
            overflowToDisk="false"
            />

    <cache name="ro.teamnet.bootstrap.domain.Account"
           timeToLiveSeconds="3600">
    </cache>

   <cache name="ro.teamnet.bootstrap.domain.ApplicationRole"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="ro.teamnet.bootstrap.domain.ModuleRight"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="ro.teamnet.bootstrap.domain.Module"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="ro.teamnet.bootstrap.domain.Account.roles"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="ro.teamnet.bootstrap.domain.PersistentToken"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="ro.teamnet.bootstrap.domain.Account.persistentTokens"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="perspectives"
           timeToLiveSeconds="3600" >
    </cache>
    <cache name="organizations"
           timeToLiveSeconds="600" >
    </cache>

    <cache name="accountsExt"
           timeToLiveSeconds="3600" >
    </cache>


</ehcache>
