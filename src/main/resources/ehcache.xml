<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd"
         name="CM1"
         updateCheck="false"

         maxBytesLocalHeap="500M">

    <!--
      This is a default configuration, it is re-configured by the CacheConfiguration Spring Bean, using the
      properties from the resources/config/*.yml files.
    -->

    <diskStore path="java.io.tmpdir"/>

    <defaultCache
            eternal="false"
            overflowToDisk="false"
    />

    <cache name="ro.teamnet.bootstrap.domain.User"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="ro.teamnet.bootstrap.domain.Authority"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="ro.teamnet.bootstrap.domain.User.authorities"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="ro.teamnet.bootstrap.domain.PersistentToken"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="ro.teamnet.bootstrap.domain.User.persistentTokens"
           timeToLiveSeconds="3600">
    </cache>


    <cache name="perspectives"
           maxBytesLocalHeap="100M"
           maxEntriesLocalDisk="1000"
           eternal="false"
           overflowToDisk="true"
           diskPersistent="true"
           timeToIdleSeconds="3600"
           copyOnWrite="true"
           copyOnRead="true"
           memoryStoreEvictionPolicy="LFU"
           transactionalMode="off"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="organizations"
           maxBytesLocalHeap="100M"
           maxEntriesLocalDisk="1000"
           eternal="false"
           overflowToDisk="true"
           diskPersistent="true"
           timeToIdleSeconds="600"
           copyOnWrite="true"
           copyOnRead="true"
           memoryStoreEvictionPolicy="LFU"
           transactionalMode="off"
           timeToLiveSeconds="600">
    </cache>

    <cache name="accountsExt"
           maxBytesLocalHeap="100M"
           maxEntriesLocalDisk="1000"
           eternal="false"
           overflowToDisk="true"
           diskPersistent="true"
           timeToIdleSeconds="3600"
           copyOnWrite="true"
           copyOnRead="true"
           memoryStoreEvictionPolicy="LFU"
           transactionalMode="off"
           timeToLiveSeconds="3600">
    </cache>

</ehcache>
