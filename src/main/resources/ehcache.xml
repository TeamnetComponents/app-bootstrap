<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd"
         name="CM1"
         updateCheck="false"

         maxBytesLocalHeap="650M"	>

    <!--
      This is a default configuration, it is re-configured by the CacheConfiguration Spring Bean, using the
      properties from the resources/config/*.yml files.
    -->

    <diskStore path="java.io.tmpdir"/>

    <defaultCache
            timeToIdleSeconds="3600"
            timeToLiveSeconds="3600"
            copyOnRead="true"
            copyOnWrite="true"
    />


    <cache name="ro.teamnet.bootstrap.domain.User"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="ro.teamnet.bootstrap.domain.Authority"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="ro.teamnet.bootstrap.domain.User.authorities"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="ro.teamnet.bootstrap.domain.PersistentToken"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="ro.teamnet.bootstrap.domain.User.persistentTokens"
           timeToLiveSeconds="3600">
    </cache>


    <cache name="perspectives"
           timeToIdleSeconds="3600"
           timeToLiveSeconds="3600"
           copyOnRead="true"
           copyOnWrite="true">
    </cache>

    <cache name="organizations"
           timeToIdleSeconds="3600"
           timeToLiveSeconds="3600"
           copyOnRead="true"
           copyOnWrite="true">
    </cache>

    <cache name="accountsExt"
           timeToIdleSeconds="3600"
           timeToLiveSeconds="3600"
           copyOnRead="true"
           copyOnWrite="true">
    </cache>

</ehcache>
